function _init()
  init_board()
end

function _update()
end

function _draw()
  cls()
  draw_board()
end

function init_board()
  block_size = 8
  left = 32
  right = 96
  top = 16
  bottom = 112
end

function draw_board()
  line(left, top, left, bottom)
  line(right, top, right, bottom)
  line(left, bottom, right, bottom)

  local x, y = left + block_size, top
  repeat
    repeat
      line(x, y, x, y)
      y += block_size
    until y >= bottom
    x += block_size
    y = top
  until x >= right
end

